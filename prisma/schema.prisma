// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  videohub    Videohub @relation(fields: [videohub_id], references: [id])
  videohub_id Int
  output      Output   @relation(fields: [videohub_id, output_id], references: [videohub_id, id])
  output_id   Int
  input       Input    @relation(fields: [videohub_id, input_id], references: [videohub_id, id])
  input_id    Int
  start       DateTime
  end         DateTime

  day_of_week       Int
  repeat_every_week Boolean?
}

model Videohub {
  id                Int                @id @default(autoincrement())
  ip                String             @unique
  name              String
  version           String
  inputs            Input[]
  outputs           Output[]
  events            Event[]
  pushbuttons       PushButton[]
  pushbuttonactions PushButtonAction[]
  VideohubActivity  VideohubActivity[]
}

model Input {
  id                Int
  videohub          Videohub           @relation(fields: [videohub_id], references: [id])
  videohub_id       Int
  label             String
  outputs           Output[]
  events            Event[]
  pushbuttonactions PushButtonAction[]

  @@id([videohub_id, id], name: "videohubInput")
}

model Output {
  id                Int
  videohub          Videohub           @relation(fields: [videohub_id], references: [id])
  videohub_id       Int
  input             Input?             @relation(fields: [videohub_id, input_id], references: [videohub_id, id])
  input_id          Int?
  label             String
  Event             Event[]
  pushbuttonactions PushButtonAction[]

  @@id([videohub_id, id], name: "videohubOutput")
}

model PushButtonAction {
  id            Int        @id @default(autoincrement())
  videohub      Videohub   @relation(fields: [videohub_id], references: [id])
  videohub_id   Int
  output        Output     @relation(fields: [videohub_id, output_id], references: [videohub_id, id])
  output_id     Int
  input         Input      @relation(fields: [videohub_id, input_id], references: [videohub_id, id])
  input_id      Int
  pushbutton    PushButton @relation(fields: [pushbutton_id], references: [id])
  pushbutton_id Int
}

model PushButton {
  id          Int                @id @default(autoincrement())
  videohub    Videohub           @relation(fields: [videohub_id], references: [id])
  videohub_id Int
  label       String             @unique
  actions     PushButtonAction[]
  color       String?
}

model VideohubActivity {
  id          Int      @id @default(autoincrement())
  videohub    Videohub @relation(fields: [videohub_id], references: [id])
  videohub_id Int
  title       String
  description String?   @db.MediumText
  icon        String
  time        DateTime
}
